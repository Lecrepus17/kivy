ScreenManager:
    id: screen_manager

    Screen:
        name: 'main'
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'This is the main screen'

            Button:
                text: 'Switch to Another Screen'
                on_press: app.root.current = 'another'

    Screen:
        name: 'another'
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'This is another screen'

            Button:
                text: 'Switch to Main Screen'
                on_press: app.root.current = 'main'
